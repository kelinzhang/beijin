<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_news_tab_detail_news_item_image"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/news_pic_default" />

    <TextView
        android:id="@+id/tv_news_tab_detail_news_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_news_tab_detail_news_item_image"
        android:lines="2"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="dfgadgsgagggasgd" />

    <TextView
        android:id="@+id/tv_news_tab_detail_news_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_news_tab_detail_news_item_title"
        android:layout_below="@id/tv_news_tab_detail_news_item_title"
        android:layout_marginTop="5dp"
        android:text="2014-09-09 09:09:09"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_news_comment_num" />

</RelativeLayout>